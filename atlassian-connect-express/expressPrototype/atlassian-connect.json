{
    "key": "example-add-on-using-atlassian-connect-express"
    , "name": "Atlassian Connect Express Add-on"
    , "description": "This is an example Confluence add-on using atlassian connect express. "
    , "vendor": {
        "name": "Nico Paul"
    }
    , "baseUrl": "https://ab476a3c.ngrok.io"
    , "links": {
        "self": "https://ab476a3c.ngrok.io/atlassian-connect.json"
        , "homepage": "https://ab476a3c.ngrok.io/atlassian-connect.json"
    }
    , "authentication": {
        "type": "jwt"
    }
    , "lifecycle": {
        "installed": "/installed"
    }
    , "scopes": [
        "READ"
        , "WRITE"
        , "DELETE"
    ]
    , "modules": {
        "generalPages": [
            {
                "key": "living-doc-2-hello-world-jira-general-pages"
                , "location": "system.top.navigation.bar"
                , "name": {
                    "value": "Hello World Express"
                }
                , "url": "/hello-world"
                , "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
            , {
                "key": "living-doc-2-hello-world-confluence-general-pages"
                , "location": "system.header/left"
                , "name": {
                    "value": "Hello World Express"
                }
                , "url": "/hello-world"
                , "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
            , {
                "key": "living-doc-2-test-page-general-pages"
                , "location": "system.header/left"
                , "name": {
                    "value": "Test Page Express"
                }
                , "url": "/test-page"
                , "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
        , "staticContentMacros": [
            {
                "key": "living-doc-2-hello-world-static-content-macros-express"
                , "name": {
                  "value": "LivingDoc2: Static Hello World Macro Express"
                }
                , "method": "post"
                , "url": "/macro/static/hello-world-macro?pageTitle={page.title}&personName={greet}&thisWorld={world}"
                , "description": {
                  "value": "Express the feelings of the user about this world and greets a person the user like to greet. Also displays the current title of the page, this macro was inserted."
                }
                , "parameters":[
                  {
                    "identifier": "world"
                    , "name": {
                        "value": "What is this World?"
                    }
                    , "type": "enum"
                    , "required": true
                    , "values": [
                      "good"
                      , "evil"
                      , "flat"
                      , "round"
                    ]
                    , "description": {
                        "value": "Fill in what you think about this world."
                      }

                  }
                  , {
                    "identifier": "greet"
                    , "name": {
                        "value": "Person I want to greet"
                    }
                    , "type": "string"
                    , "required": true
                    , "defaultvalue": "nobody"
                    , "description": {
                        "value": "Fill in the name of the person you want to greet."
                    }
                  }
                ]
                ,"conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
            , {
                "key": "living-doc-2-date-time-static-content-macros-express"
                , "name": {
                  "value": "LivingDoc2: Static DateTime Macro Express"
                }
                , "method": "post"
                , "url": "/macro/static/dateTime-macro"
                , "description": {
                  "value": "Express the feelings of the user about this world and greets a person the user like to greet. Also displays the current title of the page, this macro was inserted."
                }
                , "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
    }
}
