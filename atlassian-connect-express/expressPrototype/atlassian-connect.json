{
    "key": "example-add-on-using-atlassian-connect-express",
    "name": "Atlassian Connect Express Add-on",
    "description": "This is an example Confluence add-on using atlassian connect express. ",
    "vendor": {
        "name": "Nico Paul"
    },
    "baseUrl": "https://ab476a3c.ngrok.io",
    "links": {
        "self": "https://ab476a3c.ngrok.io/atlassian-connect.json",
        "homepage": "https://ab476a3c.ngrok.io/atlassian-connect.json"
    },
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "READ"
        , "WRITE"
        , "DELETE"
    ],
    "modules": {
        "generalPages": [
            {
                "key": "hello-world-page-jira",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Hello World"
                },
                "url": "/hello-world",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
            , {
                "key": "hello-world-page-confluence",
                "location": "system.header/left",
                "name": {
                    "value": "Hello World"
                },
                "url": "/hello-world",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
            , {
                "key": "test-page-for-confluence-add-on",
                "location": "system.header/left",
                "name": {
                    "value": "Test Page Value"
                },
                "url": "/test-page",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
        , "staticContentMacros": [
            {
                "key": "hello-world-test-macro"
                , "name": {
                  "value": "Test: Hello World"
                }
                , "method": "post"
                , "url": "/macro/static/hello-world-macro?pageTitle={page.title}&personName={greet}&thisWorld={world}"
                , "parameters":[
                  {
                    "identifier": "world"
                    , "name": {
                        "value": "What is this World?"
                    }
                    , "type": "enum"
                    , "required": true
                    , "defaultValue": "flat"
                    , "values": [
                      "good"
                      , "evil"
                      , "flat"
                      , "round"
                    ]
                    , "description": {
                        "value": "Fill in what you think about this world."
                      }

                  }
                  , {
                    "identifier": "greet"
                    , "name": {
                        "value": "Person I want to greet"
                    }
                    , "type": "string"
                    , "required": true
                    , "defaultvalue": "nobody"
                    , "description": {
                        "value": "Fill in the name of the person you want to greet."
                    }
                  }
                ]
                ,"conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
            , {
                "key": "date-time-macro",
                "name": {
                  "value": "Time Macro"
                },
                "method": "post",
                "url": "/macro/static/time-macro",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
    }
}
